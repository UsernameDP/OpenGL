#version 430
layout(local_size_x = 1) in;

// Define MyStruct outside the main function
struct MyStruct {
    vec4 position;
    vec4 direction;
};

layout(std430, binding = 0) buffer MyStructBuffer {
    MyStruct structArray[];
};

void main() {
    uint idx = gl_GlobalInvocationID.x;
    
    // Modify MyStruct values
    structArray[idx].position *= 2.0; // Example modification
    structArray[idx].direction = normalize(structArray[idx].direction); // Example normalization
}
