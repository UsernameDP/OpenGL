#version 430 core

layout(local_size_x = 1) in;

layout(std430, binding = 0) buffer InputBuffer1 {
    float input1[];
};

layout(std430, binding = 1) buffer InputBuffer2 {
    float input2[];
};

layout(std430, binding = 2) buffer MyOutputBuffer {
    float outputArr[];
};

void main() {
    uint index = gl_GlobalInvocationID.x;
    outputArr[index] = input1[index] + input2[index];
}
